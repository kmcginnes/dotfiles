#!/bin/sh
# Since Sublime is fucking insane and can't handle symlinks for the User
# directory, we'll need to manually copy stuff over.

rm -rf $ZSH/sublime-text/User
cp -R ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User $ZSH/sublime-text/User

rm -rf $ZSH/sublime-text/Installed\ Packages
cp -R ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/Installed\ Packages $ZSH/sublime-text/Installed\ Packages
